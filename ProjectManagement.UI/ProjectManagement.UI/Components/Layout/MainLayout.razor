@using ProjectManagement.UI.Components.Auth
@inherits LayoutComponentBase

<AuthorizeView>
    <Authorized>
        <UserMenu />
        @Body
    </Authorized>
    <NotAuthorized>
        <Login />
    </NotAuthorized>
</AuthorizeView>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<BlazoredToasts MaxToastCount="10"
    Timeout="10"
    RemoveToastsOnNavigation=false
    ShowProgressBar=true
/>