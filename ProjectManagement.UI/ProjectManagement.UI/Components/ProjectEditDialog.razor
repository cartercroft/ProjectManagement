<Dialog Opened=@(Opened) OpenedChanged="OpenedChanged">
    <BodyContent>
        <ProjectEdit SaveCallback="HandleSave" />
    </BodyContent>
</Dialog>

@code {
    [Parameter]
    public ProjectViewModel Project { get; set; } = null!;
    [Parameter]
    public bool Opened { get; set; }
    [Parameter]
    public EventCallback<bool> OpenedChanged { get; set; }
    [Parameter]
    public Func<Task> SaveCallback { get; set; } = null!;

    protected async Task HandleSave()
    {
        Opened = false;
        await OpenedChanged.InvokeAsync(Opened);
        await InvokeAsync(SaveCallback);
    }
}
